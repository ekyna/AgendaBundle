{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_agenda.category.header.show'|trans({'%name%': category})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(category, 'list') }}
{{ admin_resource_btn(category, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(category, 'edit') }}
    {{ admin_resource_btn(category, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#agenda-category-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="agenda-category-general">
                {{ show_row(category.name, 'text', 'ekyna_core.field.name') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(category.backgroundColor, {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(category.textColor, {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}