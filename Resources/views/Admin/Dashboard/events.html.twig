<table class="table">
    <thead>
        <tr>
            <th>{{ 'ekyna_core.field.title'|trans }}</th>
            <th>{{ 'ekyna_core.field.start_date'|trans }}</th>
            <th>{{ 'ekyna_core.field.end_date'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% if events is not empty %}
        {% for event in events %}
        <tr>
            <td>
                <a href="{{ path('ekyna_agenda_event_admin_show', {'eventId': event.id}) }}">
                    {{ event.title }}
                </a>
            </td>
            <td>
                {{ event.startDate|localizeddate('short', 'none') }}
            </td>
            <td>
                {{ event.endDate|localizeddate('short', 'none') }}
            </td>
        </tr>
        {% endfor %}
        {% else %}
        <tr>
            <td colspan="4">
                <p style="text-align: center;">
                    <em>{{ 'ekyna_agenda.event.dashboard.none'|trans }}</em>
                </p>
            </td>
        </tr>
        {% endif %}
    </tbody>
</table>